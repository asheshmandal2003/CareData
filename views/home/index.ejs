<%- layout('layout/boilerplate') %>
<link rel="stylesheet" href="/css/icon.css" />
<link rel="stylesheet" href="/css/styles.css" />

<section class="hero-section py-5">
  <div class="container">
    <div class="row align-items-center g-5">
      <div class="col-lg-6 d-flex flex-column justify-content-center">
        <h1 class="display-4 fw-bold">
          Genuine Treatment<br />For Your Health.
        </h1>
        <p class="lead text-secondary mt-3">
          Consult top doctors online for any health concern. Book an appointment
          for in-clinic consultation.
        </p>
        <div class="d-flex flex-wrap gap-3 mt-4">
          <a href="#" class="btn btn-primary btn-lg px-4">
            More Details <i class="fa fa-arrow-right ms-2"></i>
          </a>
          <a
            href="/caredata/doctors"
            class="btn btn-outline-primary btn-lg px-4"
          >
            Find a Doctor <i class="fa fa-stethoscope ms-2"></i>
          </a>
        </div>
      </div>
      <div class="col-lg-6 text-center">
        <img
          src="/image/img3.png"
          alt="Doctors online consultation"
          class="img-fluid rounded-4 shadow hero-img"
        />
      </div>
    </div>
  </div>
</section>

<section class="book-appointment bg-white rounded-4 shadow p-4 my-5 mx-3">
  <form
    id="appointment-form"
    class="row g-3 align-items-center justify-content-center"
  >
    <div class="col-md-5 position-relative">
      <label for="location" class="visually-hidden">Location</label>
      <div class="input-group">
        <span class="input-group-text bg-light"
          ><i class="fa-solid fa-location-dot"></i
        ></span>
        <input
          type="text"
          id="location"
          name="location"
          placeholder="Location"
          class="form-control location"
        />
      </div>
    </div>
    <div class="col-md-5 position-relative">
      <label for="specialty" class="visually-hidden">Specialty</label>
      <div class="input-group">
        <span class="input-group-text bg-light"
          ><i class="fa-solid fa-star-of-life"></i
        ></span>
        <input
          type="text"
          id="specialty"
          name="specialty"
          placeholder="Specialty"
          class="form-control speciality"
        />
      </div>
    </div>
    <div class="col-12 text-center">
      <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
        Book Appointment Now <i class="fa fa-calendar-check ms-2"></i>
      </button>
    </div>
  </form>
</section>

<section class="body py-5">
  <div class="container">
    <div class="row gx-5 align-items-center">
      <div class="col-lg-6 order-lg-2 text-center">
        <img
          src="https://img.freepik.com/free-vector/upload-concept-illustration_114360-1317.jpg?w=740"
          alt="Upload medical records"
          class="img-fluid rounded-4 shadow body-img"
        />
      </div>
      <div class="col-lg-6 order-lg-1">
        <h2 class="fw-bold mb-3">Securely manage your<br />medical records.</h2>
        <p class="text-secondary mb-4">
          Safeguard your valuable medical records with our state-of-the-art
          secure storage platform.
        </p>
        <a
          href="<%= user ? `/caredata/users/${user._id}/upload` : '/login' %>"
          id="home-btns-1"
          class="btn btn-success btn-lg w-100 d-flex align-items-center justify-content-center gap-2"
        >
          <i class="fa fa-cloud-upload-alt"></i> Store your medical records here
        </a>
      </div>
    </div>
  </div>
</section>

<section id="specialities" class="specialities py-5 bg-light">
  <div class="container">
    <h2 class="mb-5 text-center">Experienced in multiple medical practices</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="sp">
      <div class="col">
        <div class="card h-100 sp-card shadow-sm border-0">
          <img
            src="https://img.freepik.com/free-vector/cute-baby-sleeping-cloud-pillow-cartoon-icon-illustration_138676-2812.jpg?w=740&t=st=1691998598~exp=1691999198~hmac=d13afe19639f6927a65109046fc4d89fe965fcc3d3156fa2818730c2ff618efd"
            class="card-img-top sp-img"
            alt="Pediatric"
          />
          <div class="card-body">
            <h3 class="card-title sp-tl">Pediatric</h3>
            <p class="card-text sp-cont">
              Pediatricians diagnose and treat childhood illnesses,
              developmental issues, and behavioral disorders.
            </p>
            <a class="lm mt-3 d-inline-block" href="#"
              ><span>Learn more</span> <i class="fa fa-arrow-right"></i
            ></a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 sp-card shadow-sm border-0">
          <img
            src="https://img.freepik.com/free-vector/high-blood-pressure-abstract-concept-illustration_335657-4603.jpg?w=740&t=st=1691998042~exp=1691998642~hmac=c29949911c7c9135fe86ad3c9429b5dbc020f15f41c49ad904f0aeefd41e90b9"
            class="card-img-top sp-img"
            alt="Cardiology"
          />
          <div class="card-body">
            <h3 class="card-title sp-tl">Cardiology</h3>
            <p class="card-text sp-cont">
              Cardiology deals with heart diseases, from congenital defects to
              acquired conditions like coronary artery disease.
            </p>
            <a class="lm mt-3 d-inline-block" href="#"
              ><span>Learn more</span> <i class="fa fa-arrow-right"></i
            ></a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 sp-card shadow-sm border-0">
          <img
            src="https://img.freepik.com/free-vector/orthopedist-isometric-background-with-doctor-inviting-patient-crutches-into-cabinet-examination-vector-illustration_1284-67248.jpg?w=740&t=st=1691998503~exp=1691999103~hmac=ed1a9896c6fadc8a396ee30c2094861ff3c28a418531ca86a53ed8cc514f0d96"
            class="card-img-top sp-img"
            alt="Orthopedic"
          />
          <div class="card-body">
            <h3 class="card-title sp-tl">Orthopedic</h3>
            <p class="card-text sp-cont">
              Preserves and restores function of skeletal system, including
              bones, joints, muscles, and associated structures.
            </p>
            <a class="lm mt-3 d-inline-block" href="#"
              ><span>Learn more</span> <i class="fa fa-arrow-right"></i
            ></a>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center mt-5">
      <a href="#" class="btn btn-outline-primary btn-lg px-4">
        Browse all specialities <i class="fa fa-th-list ms-2"></i>
      </a>
    </div>
  </div>
</section>

<section class="blog py-5">
  <div class="container">
    <h2 class="mb-5 text-center" style="color: #3c59a5">
      Explore Our Newest Healthcare & Wellness Articles For Valuable Insights
      And Tips To Stay Healthy.
    </h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% if (!latestBlogs || latestBlogs.length === 0) { %>
      <div class="col">
        <div class="alert alert-info text-center w-100" role="alert">
          No blog posts found.
        </div>
      </div>
      <% } else { %> <% latestBlogs.forEach(function(blog) { %>
      <div class="col">
        <article class="card blog-post h-100 shadow-sm border-0">
          <img
            class="card-img-top news-img img-fluid"
            src="<%= blog.image %>"
            alt="news-img"
          />
          <div class="card-body blog-details-container">
            <div class="blog-header d-flex justify-content-between">
              <p class="badge bg-success"><%= blog.category %></p>
              <small class="date text-secondary">
                <%= blog.publishedAt.toLocaleDateString("en-IN") %>
              </small>
            </div>
            <h3 class="card-title"><%= blog.title %></h3>
            <p class="card-text blog-cont"><%= blog.summary %></p>
          </div>
          <span class="line"></span>
          <div
            class="card-footer d-flex align-items-center justify-content-between"
          >
            <span class="circle"></span>
            <a class="rm ms-auto" href="/blogs/<%= blog._id %>">
              Read More <i class="fa fa-arrow-right ms-1"></i>
            </a>
          </div>
        </article>
      </div>
      <% }) %> <% } %>
    </div>
    <div class="text-center mt-4">
      <a href="/blogs" class="btn btn-primary btn-lg px-4">
        Browse all blogs <i class="fa fa-book-reader ms-2"></i>
      </a>
    </div>
  </div>
</section>
