<% layout('layout/boilerplate') %>

<%
  const det = user.doctorDetails || {};

  function joinArr(arr) {
    return Array.isArray(arr) ? arr.join(", ") : "";
  }

  function safe(val, def = "") {
    if (typeof val === "string") return val.trim();
    if (val === null || val === undefined) return def;
    return val;
  }

  // Converts "09:00 AM", "02:00 PM" to "09:00", "14:00"
  function to24Hour(timeStr) {
    if (!timeStr) return "";
    // If already in 24h format, return as is
    if (/^\d{2}:\d{2}$/.test(timeStr)) return timeStr;
    // Otherwise, try parsing 12h format
    let matches = timeStr.match(/^(\d{1,2}):(\d{2})\s*([AP]M)$/i);
    if (!matches) return "";
    let hour = parseInt(matches[1], 10);
    let minute = matches[2];
    let mod = matches[3].toUpperCase();
    if (mod === "PM" && hour !== 12) hour += 12;
    if (mod === "AM" && hour === 12) hour = 0;
    return `${hour.toString().padStart(2, "0")}:${minute}`;
  }
  const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];
  const timings = det.clinicTimings || [];
  function findTiming(day) {
    return timings.find(t => t.day === day) || {};
  }
%>

